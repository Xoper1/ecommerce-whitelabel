{
  "info": {
    "name": "E-commerce Whitelabel API",
    "description": "Collection para testar a API de e-commerce whitelabel com integração de fornecedores",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    },
    {
      "key": "client1Domain",
      "value": "cliente1.local",
      "type": "string"
    },
    {
      "key": "client2Domain",
      "value": "cliente2.local",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register - Cliente 1",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201 || pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('token', response.access_token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "X-Client-Domain",
                "value": "{{client1Domain}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"newuser@cliente1.local\",\n  \"password\": \"password123\",\n  \"name\": \"Novo Usuário\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login - Cliente 1",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('token', response.access_token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "X-Client-Domain",
                "value": "{{client1Domain}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@cliente1.local\",\n  \"password\": \"password123\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Login - Cliente 2",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('token', response.access_token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "X-Client-Domain",
                "value": "{{client2Domain}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@cliente2.local\",\n  \"password\": \"password123\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              },
              {
                "key": "X-Client-Domain",
                "value": "{{client1Domain}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/me",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "me"]
            }
          }
        }
      ]
    },
    {
      "name": "Clients",
      "item": [
        {
          "name": "Get Client Config - Cliente 1",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "X-Client-Domain",
                "value": "{{client1Domain}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/clients/config",
              "host": ["{{baseUrl}}"],
              "path": ["clients", "config"]
            }
          }
        },
        {
          "name": "Get Client Config - Cliente 2",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "X-Client-Domain",
                "value": "{{client2Domain}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/clients/config",
              "host": ["{{baseUrl}}"],
              "path": ["clients", "config"]
            }
          }
        }
      ]
    },
    {
      "name": "Products",
      "item": [
        {
          "name": "List All Products - Cliente 1",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "X-Client-Domain",
                "value": "{{client1Domain}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/products",
              "host": ["{{baseUrl}}"],
              "path": ["products"]
            }
          }
        },
        {
          "name": "List All Products - Cliente 2",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "X-Client-Domain",
                "value": "{{client2Domain}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/products",
              "host": ["{{baseUrl}}"],
              "path": ["products"]
            }
          }
        },
        {
          "name": "Search Products",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "X-Client-Domain",
                "value": "{{client1Domain}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/products?search=shirt",
              "host": ["{{baseUrl}}"],
              "path": ["products"],
              "query": [
                {
                  "key": "search",
                  "value": "shirt"
                }
              ]
            }
          }
        },
        {
          "name": "Filter by Category",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "X-Client-Domain",
                "value": "{{client1Domain}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/products?category=Fantastic",
              "host": ["{{baseUrl}}"],
              "path": ["products"],
              "query": [
                {
                  "key": "category",
                  "value": "Fantastic"
                }
              ]
            }
          }
        },
        {
          "name": "Filter by Price Range",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "X-Client-Domain",
                "value": "{{client1Domain}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/products?minPrice=100&maxPrice=500",
              "host": ["{{baseUrl}}"],
              "path": ["products"],
              "query": [
                {
                  "key": "minPrice",
                  "value": "100"
                },
                {
                  "key": "maxPrice",
                  "value": "500"
                }
              ]
            }
          }
        },
        {
          "name": "Combined Filters",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "X-Client-Domain",
                "value": "{{client1Domain}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/products?search=shirt&minPrice=50&maxPrice=200",
              "host": ["{{baseUrl}}"],
              "path": ["products"],
              "query": [
                {
                  "key": "search",
                  "value": "shirt"
                },
                {
                  "key": "minPrice",
                  "value": "50"
                },
                {
                  "key": "maxPrice",
                  "value": "200"
                }
              ]
            }
          }
        },
        {
          "name": "Get Categories",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "X-Client-Domain",
                "value": "{{client1Domain}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/products/categories",
              "host": ["{{baseUrl}}"],
              "path": ["products", "categories"]
            }
          }
        },
        {
          "name": "Get Product by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "X-Client-Domain",
                "value": "{{client1Domain}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/products/br_1",
              "host": ["{{baseUrl}}"],
              "path": ["products", "br_1"]
            }
          }
        }
      ]
    }
  ]
}
